<turbo-frame id="<%= dom_id task %>" class="w-full space-y-2 md:space-y-0 md:flex items-center" >

  <div class="flex md:grow items-center justify-between gap-2">
    <div class="rounded-lg py-2.5 px-3 bg-gray-100 inline-block font-medium <%= task.complete ? 'bg-blue-100 border-blue-400 text-blue-700 ' : '' %>">
      <% if task.complete %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <%end%>
    </div>

    <div class="grow flex items-center justify-between rounded-md border outline-none w-4/5 py-2.5 px-4 my-auto  %>">

      <p class="grow">
        <%= task.description %>
      </p>

      <% if task.complete %>
        <p class="  rounded-md border outline-none py-1 px-2 my-auto hidden md:inline-flex items-center text-xs bg-blue-100 border-blue-400 text-blue-700">
          completed <%= time_ago_in_words(task.updated_at)%> ago
        </p>
      <% end %>

    </div>

  </div>

  <div class="flex items-center justify-between gap-2">
    <div class="flex gap-2">
      <% if task.complete %>
        <p class=" rounded-md border outline-none py-2.5 px-4 my-auto md:hidden items-center text-xs sm:text-sm bg-blue-100 border-blue-400 text-blue-700">completed <%= time_ago_in_words(task.updated_at)%> ago</p>
      <%else%>

        <%= button_to task_path(task), class:'btn-danger-light md:ml-2', method: :delete do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        <%end%>

        <%= link_to edit_task_path(task), class: "btn-primary-light" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
          </svg>
        <%end%>

      <% end %>
    </div>

    <%= button_to task_path(task), params: {task: {complete: !task.complete }}, class:"btn-primary-light", method: :patch do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="<%= get_svg_icon(task) %>" />
      </svg>
    <%end%>
  </div>

        </turbo-frame>
